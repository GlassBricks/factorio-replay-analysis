{
  "name": "factorio-mod",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@9.5.0",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "factorio-test": "^1.1.1",
    "factorio-test-cli": "^1.0.5",
    "factoriomod-debug": "^1.1.41",
    "gb-tstl-utils": "^1.0.2",
    "lua-types": "^2.13.1",
    "prettier": "^3.2.5",
    "tstl-expect": "^0.4.5",
    "tsx": "^4.7.1",
    "typed-factorio": "^2.7.4",
    "typescript": "^5.3.3",
    "typescript-to-lua": "1.23.0",
    "typescript-tstl-plugin": "^0.3.2"
  },
  "type": "module",
  "scripts": {
    "clean": "del-cli \"src/**/*.lua\" \"src/**/*.map\" \"!**/*.def.lua\"",
    "build": "tstl",
    "build-install": "tstl && ./install.sh",
    "build:test": "tstl -p test-mod/tsconfig.json",
    "pretest": "npm run build:test",
    "test": "factorio-test run ./test-mod -- --graphics-quality very-low --cache-sprite-atlas true",
    "watch": "tstl --watch",
    "watch:test": "tstl -p test-mod/tsconfig.json --watch",
    "format:fix": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "eslint --ext .ts,.tsx src",
    "check-clean-tree": "git diff --exit-code HEAD --",
    "check": "npm run format:check && npm run lint"
  },
  "nodemonConfig": {
    "watch": [
      "src/locale/en/*.cfg"
    ],
    "ext": "*",
    "execMap": {
      "ts": "tsx"
    }
  }
}
